<h1>Lists#index</h1>
<p>Find me in app/views/lists/index.html.erb</p>
<br>
<%= link_to 'New List', new_list_path %>
<br>
<% if @lists.any? %>
    <% @lists.each do |list| %>

        <%= link_to "-#{list.name}", list_path(list)%>
        <%= link_to 'Edit', edit_list_path(list)%>
        <%=  link_to 'Delete',list_path(list), method: :delete %>

        <% if list.items.any? %>
            <% list.items do |item| %>
                <h1>item.name</h1>

            <% end %>
        <% else %>
            <p>no items</p>
        <% end %>

        <br>
        <br>
    <% end %>
    <%else %>
<h3>No lists</h3>
<% end %>

